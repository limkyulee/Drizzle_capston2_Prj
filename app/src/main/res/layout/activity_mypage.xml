<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MypageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="35dp"
            android:text="마이페이지"
            android:textStyle="bold"
            android:textSize="17dp"
            android:textColor="#373737"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="25dp"
            android:text="김한양님 안녕하세요!"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="#373737"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="3dp"
            android:text="hanyang@hanyang.ac.kr"
            android:textSize="12dp"
            android:textColor="#8F8F8F"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="270dp"
                android:text="계정관리"
                android:textColor="#373737"
                android:textSize="13dp" />

            <View
                android:layout_width="420dp"
                android:layout_height="1.3dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="#EAEBEF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"
                android:text="서비스 정보"
                android:textColor="#373737"
                android:textSize="13dp" />

            <View
                android:layout_width="420dp"
                android:layout_height="1.3dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="#EAEBEF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"
                android:text="고객 지원"
                android:textColor="#373737"
                android:textSize="13dp" />

            <View
                android:layout_width="420dp"
                android:layout_height="1.3dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="#EAEBEF" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/mypageLikeBtn"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="155dp"
            android:background="@color/white"
            app:srcCompat="@drawable/mypage_heart" />

        <ImageButton
            android:id="@+id/mypage_cart_button"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="152dp"
            android:background="@color/white"
            app:srcCompat="@drawable/mypage_cart" />

        <ImageButton
            android:id="@+id/mypage_coin_button"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="155dp"
            android:background="@color/white"
            app:srcCompat="@drawable/mypage_coin" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="102dp"
        android:layout_marginTop="197dp"
        android:text="찜"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textColor="#373737"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="68dp"
            android:layout_marginTop="197dp"
            android:text="장바구니"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="#373737"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="197dp"
            android:text="구매내역"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="#373737"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>